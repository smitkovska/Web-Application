@model  WebApplication10.Models.ClientMovie
@{
    ViewBag.Title = "InsertNewClient";
}

<h2>Insert new client for the movie: @Model.movie.Title </h2>


@using (Html.BeginForm("InsertClientMovie", "Movies"))
            {
                <div class="form-group">
                    @Html.DropDownListFor(m=>m.ClientId, new SelectList(Model.clients,"Id","Name"),new { @class = "form-control" } )
                    @Html.HiddenFor(m=> m.MovieId)
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Add client to movie</button>
                </div>
            }

